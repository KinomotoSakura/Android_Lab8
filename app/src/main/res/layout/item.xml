<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/name_text"
        android:layout_width="@dimen/name_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_margin"
        android:layout_marginTop="@dimen/item_margin_top_bottom"
        android:layout_marginBottom="@dimen/item_margin_top_bottom"
        android:text="@string/name"
        android:gravity="center"
        android:textColor="@color/listTextColor" />
    <TextView
        android:id="@+id/bd_text"
        android:layout_width="@dimen/bd_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_top_bottom"
        android:layout_marginBottom="@dimen/item_margin_top_bottom"
        android:text="@string/bd"
        android:gravity="center"
        android:textColor="@color/listTextColor" />
    <TextView
        android:id="@+id/gift_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_margin"
        android:layout_marginTop="@dimen/item_margin_top_bottom"
        android:layout_marginBottom="@dimen/item_margin_top_bottom"
        android:text="@string/gift"
        android:gravity="center"
        android:textColor="@color/listTextColor" />
</LinearLayout>